<div class="center" onclick="alertDismiss()" id="alert">
	<% if(alerts.error) {%> <% alerts.error.forEach(function(msg) {%>
	<div class="row center">
		<div class="col s12 m4 offset-m4">
			<div class="card-panel amber lighten-1 center">
				<span class="white-text">
					<%= msg %>
				</span>
			</div>
		</div>
	</div>
	<% }); %> <% } %> <% if(alerts.success) { %> <% alerts.success.forEach(function(msg) { %>
	<div class="row">
		<div class="col s12 m4 offset-m4">
			<div class="card-panel indigo lighten-3 center">
				<span class="white-text">
					<%= msg %>
				</span>
			</div>
		</div>
	</div>
	<% }); %> <% }%>
</div>
